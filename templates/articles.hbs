<body>
  <div class="header">
    Articles
  </div>
  <div class="tag-select"><span class="select-text">Search for tags</span>
    {{#each tags}}  
      <span class="tag"><a href="#{{this}}">{{this}}</a></span>
    {{/each}}
  </div>
  <div class="container">

    {{#each articles}}
      <div class="box">
        <h2><a class="link" href="./{{title}}">{{title}}</a></h2>{{#each tags}}<span class="tag">{{this}}</span>{{/each}}
      </div>
    {{/each}}
  </div>
  </div>
  <script src="src/articles.js"></script>
